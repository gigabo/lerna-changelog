{
  "name": "lerna-changelog",
  "version": "0.1.0",
  "description": "Generate a changelog for a lerna monorepo",
  "main": "index.js",
  "bin": {
    "lerna-changelog": "cli.js"
  },
  "scripts": {
    "build": "babel src -d lib",
    "clean": "rimraf lib",
    "test": "eslint index.js cli.js src/",
    "prepublish": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lerna/lerna-changelog.git"
  },
  "keywords": [
    "lerna",
    "changelog"
  ],
  "author": "Bo Borgerson <gigabo@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lerna/lerna-changelog/issues"
  },
  "homepage": "https://github.com/lerna/lerna-changelog#readme",
  "devDependencies": {
    "babel-cli": "^6.9.0",
    "babel-preset-es2015": "^6.9.0",
    "eslint": "^2.10.2",
    "rimraf": "^2.5.2"
  },
  "peerDependencies": {
    "lerna": "^2.0.0-beta.8"
  },
  "dependencies": {
    "chalk": "^1.1.3",
    "mkdirp": "^0.5.1"
  }
}
